{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">✅ Gestion des tâches</h1>
        <a href="{{ path('app_tache_ajouter') }}" class="btn btn-success">
            + Nouvelle tâche
        </a>
    </div>

    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if taches is empty %}
        <div class="alert alert-info">
            Aucune tâche pour le moment. 
            <a href="{{ path('app_tache_ajouter') }}">Créer votre première tâche</a>
        </div>
    {% else %}
        <div class="row">
            {% for tache in taches %}
                <div class="col-md-6 mb-3">
                    <div class="card {% if tache.terminee %}bg-light{% endif %}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">
                                    <a href="{{ path('app_tache_detail', {'id': tache.id}) }}" 
                                       class="text-decoration-none">
                                        {% if tache.terminee %}
                                            <span class="text-muted"><del>{{ tache.titre }}</del></span>
                                        {% else %}
                                            {{ tache.titre }}
                                        {% endif %}
                                    </a>
                                </h5>
                                <div>
                                    {% if not tache.terminee %}
                                        <a href="{{ path('app_tache_terminer', {'id': tache.id}) }}" 
                                           class="btn btn-sm btn-outline-success"
                                           title="Marquer comme terminée">
                                            ✓
                                        </a>
                                    {% else %}
                                        <span class="badge bg-success">Terminée</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            {% if tache.description %}
                                <p class="card-text text-muted">
                                    {{ tache.description|length > 100 ? tache.description|slice(0, 100) ~ '...' : tache.description }}
                                </p>
                            {% endif %}
                            
                            <small class="text-muted">
                                Créée le {{ tache.dateCreation|date('d/m/Y') }}
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <div class="mt-3 text-muted">
            Total : {{ taches|length }} tâche(s)
        </div>
    {% endif %}
{% endblock %}
