{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üì∞ Liste des articles</h1>
        <a href="{{ path('app_article_nouveau') }}" class="btn btn-primary">
            ‚ûï Nouvel article
        </a>
    </div>

    {% if articles is empty %}
        <div class="alert alert-info text-center py-5">
            <p class="mb-0">Aucun article pour le moment.</p>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Date</th>
                        <th>Publi√©</th>
                        <th>Cat√©gorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.titre }}</td>
                            <td>{{ article.auteur }}</td>
                            <td>{{ article.dateCreation|date('d/m/Y') }}</td>
                            <td>
                                {% if article.publie %}
                                    <span class="badge bg-success">Oui</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">Non</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if article.categorie %}
                                    {{ article.categorie.nom }}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_article_detail', {id: article.id}) }}" class="btn btn-outline-primary btn-sm">
                                    üëÅÔ∏è Voir
                                </a>
                                <a href="{{ path('app_article_modifier', {id: article.id}) }}" class="btn btn-outline-warning btn-sm">
                                    ‚úèÔ∏è
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}